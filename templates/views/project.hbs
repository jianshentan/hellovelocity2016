<div class="hv-project-slideshow-wrapper"
  data-color="{{ data.project.primaryColor }}"
  data-bg-color="{{ data.project.backgroundColor }}">

  <div class="container">
    <div class="hv-project-title"
      data-color="{{ data.project.primaryColor }}">
      {{ data.project.title }}
    </div>
    <div class="hv-project-description"
      data-color="{{ data.project.primaryColor }}">
      {{ data.project.pageDescription }}
    </div>
    <!-- Project Slides -->
    <div class="hv-project-slideshow">

      <!-- Project Slides -->
      <div class="hv-project-slideshow">
        {{#each data.project.pageGallery }}
        <img data-id="{{@index}}" src="{{ url }}"
          {{#if @first}} class="hv-project-slide active"
          {{else}} class="hv-project-slide"
          {{/if}}/>
        {{/each}}
      </div>

      <!-- Project Slides Navigation -->
      <div class="hv-project-nav-container">
        {{#each data.project.pageGallery}}
        <div data-id="{{@index}}"
          data-border-color="{{ primaryColor }}"
          {{#if @first}}class="hv-project-nav active"
          {{else}} class="hv-project-nav"
          {{/if}}>{{inc @index}}</div>
        {{/each}}
      </div>

    </div>
  </div>
</div>

<div class="container">
  <div class="row">
    <div class="hv-project-express col-xs-4 col-md-3">
      <div class="hv-project-logo-wrapper" data-bg-color="{{ data.project.backgroundColor }}">
        <img class="hv-project-logo" src="{{ data.project.pageLogo.url }}">
      </div>
      <br>
      <div class="hv-project-logo-link" 
        data-border-color="{{ data.project.backgroundColor }}"
        data-color="{{ data.project.backgroundColor }}">
        visit website &rarr;
      </div>
      <br>
      <div class="hv-project-info">
        <div class="hv-project-info-title">{{ data.project.title }}</div>
        <div class="hv-project-info-year">{{ data.project.year }}</div>
      </div>
      
    </div>
    <div class="hv-project-content col-xs-8 col-md-9">
      {{{ data.project.pageContent }}}
    </div>
  </div>
</div>

