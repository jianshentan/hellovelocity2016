<div class="hv-blog-filler">
  <div class="hvm-container">
    Blog
  </div>
</div>

<div class="hv-blog-banner">
  <div class="hvm-container">
    <div class="hv-blog-header">What have we been <br><span style="font-weight: 700;">Thinking about?</span></div>
  </div>
</div>
<div class="hv-blog-posts">
  
  {{# each data.posts.results}}
  <!-- blog listing -->
  <div class="hv-blog">
    <div class="hvm-container">
      <div class="hv-blog-post">

        <!-- blog image -->
        <div class="hv-blog-image-wrapper">
          <img class="hv-blog-image" src="{{ image.url }}">
        </div>

        <!-- blog text -->
        <div class="hv-blog-post-wrapper">
          <div data-ks-editable="{{#if ../user}}{{adminEditableUrl ../../user _id}}{{/if}}" class="post hv-blog-post-description">

            <div class="hv-blog-title">{{{title}}}</div>
            <p class="lead">
              <!--{{{categoryList categories prefix="Posted in "}}}-->
              <!--{{#if author.name.first}}by {{author.name.first}}{{/if}}-->
              {{#if publishedDate }} {{date publishedDate }} {{/if}}
            </p>
            <p>{{{content.brief}}}</p>
            <a href="{{postUrl slug}}"><div class="hv-blog-button">Read more</div></a>
          </div>
        </div>



      </div>
    </div>
  </div>
  <hr>
  {{/each}}

